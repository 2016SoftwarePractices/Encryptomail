<%= form_for(@user, as: user, url: user_path(user)) do |f| %>
	<div class="col s12">
		<% if @user.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

				<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>
	</div>
	<div class="col s12 m6 offset-m3">
		<div class="field">
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
	</div>
	<div class="col s12 m6 offset-m3">
		<div class="field">
			<%= f.label :pub_key %>
			<%= f.text_field :pub_key %>
		</div>
	</div>
	<div class="col s12 m6 offset-m3">
		<div class="actions">
			<%= f.submit nil, :class => "waves-effect waves-light btn green darken-3" %>
		</div>
	</div>
<% end %>
