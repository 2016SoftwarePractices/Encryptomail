<div class="row">
	<div class="col s12 m6 offset-m3 card blue-grey-darken-3-alpha center">
		<div class="row">
			<div class="col s12">
				<h4>Editing <%= @group.group_name %></h4>
			</div>
			<div class="col s12">
				<%= render 'form' %>
			</div>
			
			<div class="col s12">
				<%= button_to "Delete Group", @group, method: :delete, data: { confirm: "Are you sure?" }, class: "waves-effect waves-light btn red darken-3" %>
			</div>
			
			<div class="col s12">
				<%= link_to "Back", @group, class: "waves-effect waves-light btn green darken-3" %>
			</div>
		</div>
		
	</div>
</div>