<h1>Listing Groups</h1>

<table>
	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @groups.each do |group| %>
			<tr>
				<td><%= group.group_name %></td>
				<td><%= group.email %></td>
				<td><%= link_to 'Show', group %></td>
				<td><%= link_to 'Leave', group %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

